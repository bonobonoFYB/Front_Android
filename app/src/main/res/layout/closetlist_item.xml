<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/closetItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:background="@drawable/box">

        <ImageView
            android:id="@+id/closetItemImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginVertical="3dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/closet_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/closetItemName"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="15sp"
                    android:inputType="textPersonName"
                    android:letterSpacing="-0.1"
                    android:text="보노보노" />

                <ImageView
                    android:id="@+id/mSelectItemCancel"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

            </FrameLayout>

            <EditText
                android:id="@+id/closetItemNote"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:textSize="14sp"
                android:textColor="#9A9A9A"
                android:inputType="textPersonName"
                android:letterSpacing="-0.1"
                android:text="귀여운 보노보노" />

            <EditText
                android:id="@+id/closetItemKind"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:inputType="textPersonName"
                android:letterSpacing="-0.1"
                android:text="후드티" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mSelectAction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="50dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/changeClosetItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/update_btn" />

        <ImageView
            android:id="@+id/deleteClosetItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/delete_btn" />

    </LinearLayout>

</LinearLayout>